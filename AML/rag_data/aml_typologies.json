{
    "typologies": [
        {
            "name": "Structuring (Smurfing)",
            "description": "Breaking down large transactions into smaller amounts to avoid reporting thresholds",
            "indicators": [
                "Multiple transactions just below reporting thresholds",
                "Transactions in round numbers",
                "Multiple transactions in short time periods",
                "Transactions at different locations or branches"
            ],
            "risk_level": "High",
            "detection_methods": [
                "Pattern analysis of transaction amounts",
                "Time-based clustering",
                "Location-based analysis",
                "Customer behavior profiling"
            ]
        },
        {
            "name": "Layering",
            "description": "Complex series of transactions designed to obscure the origin of funds",
            "indicators": [
                "Multiple rapid transfers between accounts",
                "Use of multiple financial institutions",
                "Transactions with no apparent business purpose",
                "Complex transaction chains"
            ],
            "risk_level": "High",
            "detection_methods": [
                "Network analysis of transaction flows",
                "Velocity monitoring",
                "Purpose analysis",
                "Cross-institution pattern detection"
            ]
        },
        {
            "name": "Trade-Based Money Laundering",
            "description": "Using trade transactions to disguise the movement of money",
            "indicators": [
                "Over/under invoicing",
                "Multiple invoices for single shipment",
                "Unusual trade routes",
                "Mismatched goods descriptions"
            ],
            "risk_level": "Medium",
            "detection_methods": [
                "Price deviation analysis",
                "Trade pattern analysis",
                "Document verification",
                "Counterparty risk assessment"
            ]
        },
        {
